---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import Card2LUN from "../components/Card2_LUN.astro";
import Card3LUN from "../components/Card3_LUN.astro";
import Card_BLOG from "../components/Card_BLOG.astro";
import SingleNAV from "../components/single_NAV.astro";
import Overblik from "../components/overblik.astro";
import Program from "../components/program.astro";
import Inkluderet from "../components/inkluderet.astro";
import Fag from "../components/fag.astro";
import SingleViewStatus from "../components/singleView_status.astro";
---

<MainLayout title="Komponentbibliotek">
  <main class="container mx-auto p-4 space-y-12">
    <!-- Hovedtitel -->
    <section class="space-y-2">
      <Heading htmlheading="h1" weight="medium">Komponentbibliotek</Heading>
      <Text stylingclasses="italic"
        >Oversigt over alle heading- og tekstkomponenter brugt i projektet.</Text
      >
    </section>

    <hr class="border-gray-300" />

    <!-- Headings & Subtitles -->
    <section class="space-y-6">
      <Heading htmlheading="h2" weight="medium">Headings & Subtitles</Heading>

      <div class="flex flex-col gap-6">
        <!-- H1 -->
        <div class="flex flex-col gap-1">
          <Heading htmlheading="h1">Heading_1 — standard</Heading>
          <Heading htmlheading="h1" font="serif" weight="bold"
            >Heading_1 — alternativ</Heading
          >
        </div>

        <!-- H2 -->
        <div class="flex flex-col gap-1">
          <Heading htmlheading="h2">Heading_2 — standard</Heading>
          <Heading htmlheading="h2" font="serif" weight="bold"
            >Heading_2 — alternativ</Heading
          >
        </div>

        <!-- H3 -->
        <div class="flex flex-col gap-1">
          <Heading htmlheading="h3">Heading_3 — standard</Heading>
          <Heading htmlheading="h3" font="display" weight="medium"
            >Heading_3 — alternativ</Heading
          >
        </div>

        <!-- H4 -->
        <div class="flex flex-col gap-1">
          <Heading htmlheading="h4">Heading_4 — standard</Heading>
          <Heading htmlheading="h4" font="uber" weight="medium"
            >Heading_4 — alternativ</Heading
          >
        </div>

        <!-- Subtitle_1 -->
        <div class="flex flex-col gap-1">
          <Heading htmlheading="h5">Subtitle_1 — standard</Heading>
          <Heading htmlheading="h5" font="serif" weight="medium"
            >Subtitle_1 — alternativ</Heading
          >
        </div>

        <!-- Subtitle_2 -->
        <div class="flex flex-col gap-1">
          <Heading htmlheading="h6">Subtitle_2 — standard</Heading>
          <Heading htmlheading="h6" font="display" weight="medium"
            >Subtitle_2 — alternativ</Heading
          >
        </div>
      </div>
    </section>

    <hr class="border-gray-300" />

    <!-- Text Types -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Text Types</Heading>

      <div class="flex flex-col gap-3">
        <Text type="body_1">body_1 — standard</Text>
        <Text type="body_1" font="condensed">body_1 — alternative</Text>

        <Text type="body_2">body_2 — standard</Text>
        <Text type="body_2" weight="bold">body_2 — alternative</Text>

        <Text type="caption">caption — standard</Text>
        <Text type="caption" weight="bold" font="display"
          >caption — alternative</Text
        >
      </div>
    </section>

    <hr class="border-gray-300" />

    <!-- Links -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Links</Heading>
      <!-- <div class="flex flex-col gap-2">
        <Text><Link href="#">Default link</Link> — integreret i brødtekst</Text>
        <Text><Link href="#" variant="primary">Primary link</Link></Text>
        <Text
          ><Link href="#" variant="primary" size="small">Primary small</Link
          ></Text
        >
        <Text
          ><Link href="#" variant="primary" size="medium">Primary medium</Link
          ></Text
        >
        <Text
          ><Link href="#" variant="primary" size="large">Primary large</Link
          ></Text
        >
        <Text
          ><Link href="#" variant="secondary" size="small">Secondary small</Link
          ></Text
        >
        <Text
          ><Link href="#" variant="secondary" size="medium"
            >Secondary medium</Link
          ></Text
        >
        <Text
          ><Link href="#" variant="secondary" size="large">Secondary large</Link
          ></Text
        >
      </div> -->
    </section>

    <hr class="border-gray-300" />

    <!-- Buttons -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Buttons</Heading>
      <div class="flex flex-wrap gap-4">
        <Button>Default</Button>
        <Button variant="primary">Primary</Button>
        <Button variant="primary" size="small">Primary small</Button>
        <Button variant="primary" size="medium">Primary medium</Button>
        <Button variant="primary" size="large">Primary large</Button>
        <Button variant="secondary" size="small">Secondary small</Button>
        <Button variant="secondary" size="medium">Secondary medium</Button>
        <Button variant="secondary" size="large">Secondary large</Button>
        <Button variant="sub_nav" size="large">Sub Nav BTN</Button>
        <Button variant="card_btn" size="large">Card BTN</Button>
        <Button variant="number_btn" size="medium">i</Button>


        <!-- <Button variant="primary" size="small" class:list={[borderRadiusClasses["small"]]}>Rounded small</Button>
        <Button variant="primary" size="medium" class:list={[borderRadiusClasses["medium"]]}>Rounded medium</Button>
        <Button variant="primary" size="large" class:list={[borderRadiusClasses["large"]]}>Rounded large</Button> -->
      </div>
    </section>

    <hr class="border-gray-300" />

    <!-- Colors -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Colors</Heading>
          <hr class="border-gray-300" />
      <div class="flex flex-wrap gap-4">
        <Heading htmlheading="h2" weight="medium">Primary colors variants</Heading>
        <div class="bg-primary h-auto w-auto"> <Heading htmlheading="h1">Primary:#ff5900</Heading></div>
        <div class="bg-primary-muted h-auto w-auto"> <Heading htmlheading="h2">Primary-muted:#ffc39b</Heading></div>
        <div class="bg-primary-see-thru h-auto w-auto"> <Heading htmlheading="h3">Primary-see-thru:rgba(255, 89, 0, 0.5)</Heading></div>
      </div>
    <hr class="border-gray-300" />
      <div class="flex flex-wrap gap-4">
        <Heading htmlheading="h2" weight="medium">Secondary colors variants</Heading>
        <div class="bg-secondary h-auto w-auto"> <Heading htmlheading="h1">Secondary:#00bfff</Heading></div>
        <div class="bg-secondary-muted h-auto w-auto"> <Heading htmlheading="h2">Secondary-muted:#99ccff</Heading></div>
      </div>
    <hr class="border-gray-300" />
      <div class="flex flex-wrap gap-4">
        <Heading htmlheading="h2" weight="medium">Color for text</Heading>
        <div class="bg-background h-auto w-auto"> <Heading htmlheading="h1">Color background:#f6f3ea</Heading></div>
        <div class="bg-black h-auto w-auto"> <Heading htmlheading="h2">Black text:#191919</Heading></div>
        <div class="bg-white h-auto w-auto"> <Heading htmlheading="h3">White text:#fbfbff</Heading></div>
      </div>
          <hr class="border-gray-300" />

          <div> </div>

    </section>

        <!-- Typography -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Typography</Heading>
      <div class="flex flex-col gap-4">
        <p class="font-display">Font Display: Azo</p>
        <p class="font-uber">Font: Azo-Uber</p>
        <p class="font-sans">Font: Roboto</p>
        <p class="font-condensed">Font: Roboto Condensed</p>
      </div>
    </section>
        <hr class="border-gray-300 " />

        <!-- Cards -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Cards</Heading>
      <div class="flex flex-col gap-4">
        <!-- Besked til Nicolai -->
        <Heading htmlheading="h7">Højden og bredden af cardet er SATTE tal, ikke responsive, har puttet en margin-top og bottom på titlen så den ikker clasher med billedet</Heading>
        <Heading htmlheading="h8">Knappen skal lige fixes med hvor billedet bliver sat på</Heading>
        <Card2LUN />
        <Card3LUN />
        <!-- Besked til Nicolai -->
        <Heading htmlheading="h8">Hvordan gør jeg teksten hvid lol</Heading>
        <Card_BLOG />
      </div>
    </section>

        <hr class="border-gray-300" />

        <div class="grid ">
           <!-- Navigation -->
    <section class="space-y-4">
      <Heading htmlheading="h2" weight="medium">Navigation menus</Heading>
              <!-- Besked til Nicolai -->
        <Heading htmlheading="h8">Vil gerne gøre den vandret uden at den skubber til siden men beholder denne her bredde den har nu</Heading>
      <SingleNAV />
    </section>
    </div>
            <hr class="border-gray-300 h-min-100" />

          <!-- Single Nav components -->
  <section class="space-y-10">
    <Heading htmlheading="h2" weight="medium">Single Nav components</Heading>
    <div>
    <Overblik />
    <Program />
    <Inkluderet />
    <Fag />
    </div>
  </section>

              <!-- <hr class="border-gray-300 h-min-100" /> -->

      <!-- Single Page Components -->
  <section class="space-y-10">  
    <Heading htmlheading="h2" weight="medium">Single Page components</Heading>

    <div>
      
      <!-- Besked til Nicolai -->
        <Heading htmlheading="h5">Jeg har smidt en overflow-clip på containeren, så den ikke går ud over siden og gør den længere. Men mine problemer her er:</Heading>
        <Heading htmlheading="h8">Elementerne i child divene er ikke centreret - Den sekundær tekst er ikke orange</Heading>
        <br><br>
        <Heading htmlheading="h5">UPDATE: Jeg fik fixet at tingene går ud over containeren ved at give den en mindre gap, men hvis den får sin originale gap går den ud over containeren igen, så det er kun et midlertidigt løsning. Men tror det er pga at der er en max-width eller noget lignene på hele denne her side?</Heading>
        <br>
        <SingleViewStatus />
    </div>

  </section>


  </main>
</MainLayout>
