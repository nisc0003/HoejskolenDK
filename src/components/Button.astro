---
// Henter parametrene fra Astro.props
const { variant = "primary", size = "medium" } = Astro.props;

//Definer den styling (Tailwind classes, der gør sig gældende for alle knapper)
// const buttonStyling = "border-2 px-16 py-4";
const buttonStyling = "px-20 py-3";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige varianter
const variantClasses = {
  // "primary": "border-black hover:bg-black hover:text-white hover:-skew-x-12 transition-all duration-700", /* border-primary-500 */
  // "secondary": "border-blue-500 hover:bg-blue-500 hover:border-blue-200" /* border-secondary-500 */
  primary:
    "bg-primary text-white rounded-full hover:bg-secondary hover:text-black" /* border-primary-500 */,
  secondary:
    "bg-secondary text-white rounded-full hover:bg-primary hover:text-black" /* border-secondary-500 */,
  sub_nav:
    "text-primary-see-thru rounded-0 bg-primary-muted hover:bg-primary hover:text-white" /* border-secondary-500 */,
  number_btn:
    "w-1 h-5 px-0 py-0 rounded-full text-primary-see-thru bg-primary-muted hover:bg-primary hover:text-white",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog størrelser.
const sizeClasses = {
  large: "text-4xl",
  medium: "text-xl",
  small: "text-large",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskelligeog mængder af radius på knappen.
const borderRadiusClasses = {
  rounded3: "rounded-90",
  rounded2: "rounded-45",
  rounded1: "rounded-1",
};
---

<!--Sæt classes for den pågældende knap sammen ved hjælp af Astros class:list -->
<button
  class:list={[
    buttonStyling,
    variantClasses[variant],
    sizeClasses[size],
    borderRadiusClasses[size],
  ]}><slot /></button
>
